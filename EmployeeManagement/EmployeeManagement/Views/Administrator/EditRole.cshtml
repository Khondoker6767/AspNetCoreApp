@model EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
}
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="RoleName" disabled class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger">
        <div class="form-group row">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-outline-primary">Update</button>
                <a asp-action="ListOfRoles" class="btn btn-outline-primary">Cancel</a>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3>Users in Role</h3>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var item in Model.Users)
                    {
                        <h5 class="card-title">@item</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at this moment</h5>
                }
            </div>
            <div class="card-footer">
                <a asp-controller="Administrator" asp-action="EditUserInRole" 
                   asp-route-roleId="@Model.Id" class="brn btn-outline-primary" style="width:auto">Add or Remove Users from this role</a>
            </div>
        </div>
    </div>
</form>