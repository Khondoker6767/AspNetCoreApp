@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ListOfRoles";
}

<h1>List Of Roles</h1>

@if (Model.Any())
{
<a class="btn btn-outline-primary mb-3" asp-controller="Administrator" asp-action="CreateRole" 
   style="width:auto">Create New Role</a>
    foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role ID: @item.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="Administrator" asp-action="EditRole" asp-route-id="@item.Id"  class="btn btn-outline-primary">Edit</a>
                <a href="#" class="btn btn-outline-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
<div class="card">
    <div class="card-header">No Roels has been created yet</div>
    <div class="card-body">
        <h5 class="card-title"> Click the button below to create role</h5>
        <a class="btn btn-outline-primary" asp-controller="Administrator" asp-action="CreateRole" style="width:auto">Create Role</a>
    </div>
</div>
}