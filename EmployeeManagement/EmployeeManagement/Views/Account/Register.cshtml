@model EmployeeManagement.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<hr />
<div class="main">
    <section class="signup">
        <div class="container-fluid">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign Up</h2>
                    <form asp-action="Register" class="register-form" id="register-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="Email" name="Email" id="name" placeholder="Your Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="Password" name="Password" id="name" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="ConfirmPassword" name="ConfirmPassword" id="name" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="~/Images/signup-image.jpg" alt="sing up image"></figure>
                    <a asp-controller="Account" asp-action="Login" class="signup-image-link">I am already member</a>
                </div>
            </div>
        </div>
    </section>
</div>
<div>
    <a asp-action="Login">Go to Login</a>
</div>
