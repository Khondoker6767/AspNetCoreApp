@model Employee
@{
    var photoPath = "/Images/" + (Model.ImageUrl ?? "no.png");
}
<br />
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 row-justify-content-center">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                <h4> Id: @Model.Id</h4>
                <h4> Joining Date: @Model.JoiningDate</h4>
                <h4> Email: @Model.Email</h4>
                <h4> Department: @Model.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-primary" style="width:150px">Back to Index</a>                
            </div>
        </div>
    </div>
    <div class="col-sm-3"></div>
</div>
