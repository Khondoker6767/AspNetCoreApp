@model IEnumerable<Employee>
@{ ViewBag.Titlte = "Employee List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<div class="card-deck">
    @foreach (var item in Model)
    {
        var photoPath = "/Images/" + (item.ImageUrl ?? "noImage.jpg");
        <div class="card m-3" style="min-width:11rem; max-width:22.5% ">
            <div class="card-header">
                <h3>@item.Name</h3>
                <img class="card-img-top imageThumbnail" style="max-height:125px; max-width:100px" src="@photoPath" alt="iMAGE" asp-append-version="true" />
                @*<h3>@item.Email</h3>
                <h3>@item.Department</h3>*@
            </div>
            
            <div class="card-footer text-center">

                <a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">View</a>
                <a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info">Edit</a>
                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
            </div>
        </div>

     }
</div>

