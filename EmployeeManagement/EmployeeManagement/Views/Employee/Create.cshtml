@model EmployeeCreateViewModel
@{ ViewBag.Title = "Create Employee";}
<hr />
<div class="main">
    <div class="container-fluid">
        <div class="signup-content">
            <div class="signup-form">
                <h4 class="form-title" style="text-align:left; color:darkblue; font-family:veranda; font:bolder">NEW EMPLOYEE REGISTRY</h4>
                <form enctype="multipart/form-data" asp-controller="Employee" asp-action="Create" method="Post" class="register-form" id="register-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input asp-for="JoiningDate" class="form-control" placeholder="Joining Date" />
                            <span asp-validation-for="JoiningDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" placeholder="Enter your Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-10">
                            <select asp-for="Department" class="custom-select mr-sm-2"
                                    asp-items="Html.GetEnumSelectList<Dept>()">
                                <option value="">Please select your Department</option>
                            </select>
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label class="col-sm-2 col-form-label">Image</label>*@
                        <div class="col-sm-10">
                            <img src="~/Images/noImage.jpg" width="90" height="110" class="change_edit" />
                            <input type="file" asp-for="Photo" class="form-control changeImage" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-outline-success">Create</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <div class="col-sm-10">
                   <figure><img src="~/Images/noImage.jpg" class="change_edit" /></figure> 
                   
                </div>
                @*<figure><img src="~/Images/Employee1.jpg"></figure>*@

            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.changeImage').change(function () {
            var input = this;
            if (input.files) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('.change_edit').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0])
            }
        })
    });
</script>